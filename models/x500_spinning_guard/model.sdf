<?xml version="1.0" encoding="UTF-8"?>
<sdf version='1.9'>
  <model name='x500_spinning_guard'>
    <include merge='true'>
      <uri>model://x500_base</uri>
    </include>

    <link name="propeller_guard">
      <pose>0 0 0.3 0 0 0</pose> <!-- Adjust the height as needed -->
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="propeller_guard_visual">
        <geometry>
          <cylinder>
            <radius>0.39</radius> <!-- Increased by 30% from 0.3 -->
            <length>0.026</length> <!-- Increased by 30% from 0.02 -->
          </cylinder>
        </geometry>
        <material>
          <ambient>1 1 1 0.5</ambient> <!-- Changed to white with 50% transparency -->
          <diffuse>1 1 1 0.5</diffuse> <!-- Changed to white with 50% transparency -->
          <specular>1 1 1 0.5</specular> <!-- Changed to white with 50% transparency -->
        </material>
      </visual>
      <!-- Add some visual markers to the propeller guard -->
      <visual name="propeller_guard_marker_1">
        <pose>0.364 0 0.013 0 0 0</pose> <!-- Adjusted based on the new radius -->
        <geometry>
          <box>
            <size>0.026 0.13 0.013</size> <!-- Increased by 30% -->
          </box>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0.5 0.5 0.5 1</specular>
        </material>
      </visual>
      <visual name="propeller_guard_marker_2">
        <pose>-0.364 0 0.013 0 0 0</pose> <!-- Adjusted based on the new radius -->
        <geometry>
          <box>
            <size>0.026 0.13 0.013</size> <!-- Increased by 30% -->
          </box>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
          <specular>0.5 0.5 0.5 1</specular>
        </material>
      </visual>
      <collision name="propeller_guard_collision">
        <geometry>
          <cylinder>
            <radius>0.39</radius> <!-- Increased by 30% from 0.3 -->
            <length>0.026</length> <!-- Increased by 30% from 0.02 -->
          </cylinder>
        </geometry>
      </collision>
    </link>
    <joint name="propeller_guard_joint" type="revolute">
      <parent>base_link</parent>
      <child>propeller_guard</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e+16</lower>
          <upper>1e+16</upper>
        </limit>
        <dynamics>
          <damping>0.001</damping>
          <friction>0.001</friction>
        </dynamics>
      </axis>
    </joint>

    <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
      <jointName>rotor_0_joint</jointName>
      <linkName>rotor_0</linkName>
      <turningDirection>ccw</turningDirection>
      <timeConstantUp>0.0125</timeConstantUp>
      <timeConstantDown>0.025</timeConstantDown>
      <maxRotVelocity>1000.0</maxRotVelocity>
      <motorConstant>8.54858e-06</motorConstant>
      <momentConstant>0.016</momentConstant>
      <commandSubTopic>command/motor_speed</commandSubTopic>
      <motorNumber>0</motorNumber>
      <rotorDragCoefficient>8.06428e-05</rotorDragCoefficient>
      <rollingMomentCoefficient>1e-06</rollingMomentCoefficient>
      <rotorVelocitySlowdownSim>10</rotorVelocitySlowdownSim>
      <motorType>velocity</motorType>
    </plugin>
    <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
      <jointName>rotor_1_joint</jointName>
      <linkName>rotor_1</linkName>
      <turningDirection>ccw</turningDirection>
      <timeConstantUp>0.0125</timeConstantUp>
      <timeConstantDown>0.025</timeConstantDown>
      <maxRotVelocity>1000.0</maxRotVelocity>
      <motorConstant>8.54858e-06</motorConstant>
      <momentConstant>0.016</momentConstant>
      <commandSubTopic>command/motor_speed</commandSubTopic>
      <motorNumber>1</motorNumber>
      <rotorDragCoefficient>8.06428e-05</rotorDragCoefficient>
      <rollingMomentCoefficient>1e-06</rollingMomentCoefficient>
      <rotorVelocitySlowdownSim>10</rotorVelocitySlowdownSim>
      <motorType>velocity</motorType>
    </plugin>
    <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
      <jointName>rotor_2_joint</jointName>
      <linkName>rotor_2</linkName>
      <turningDirection>cw</turningDirection>
      <timeConstantUp>0.0125</timeConstantUp>
      <timeConstantDown>0.025</timeConstantDown>
      <maxRotVelocity>1000.0</maxRotVelocity>
      <motorConstant>8.54858e-06</motorConstant>
      <momentConstant>0.016</momentConstant>
      <commandSubTopic>command/motor_speed</commandSubTopic>
      <motorNumber>2</motorNumber>
      <rotorDragCoefficient>8.06428e-05</rotorDragCoefficient>
      <rollingMomentCoefficient>1e-06</rollingMomentCoefficient>
      <rotorVelocitySlowdownSim>10</rotorVelocitySlowdownSim>
      <motorType>velocity</motorType>
    </plugin>
    <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
      <jointName>rotor_3_joint</jointName>
      <linkName>rotor_3</linkName>
      <turningDirection>cw</turningDirection>
      <timeConstantUp>0.0125</timeConstantUp>
      <timeConstantDown>0.025</timeConstantDown>
      <maxRotVelocity>1000.0</maxRotVelocity>
      <motorConstant>8.54858e-06</motorConstant>
      <momentConstant>0.016</momentConstant>
      <commandSubTopic>command/motor_speed</commandSubTopic>
      <motorNumber>3</motorNumber>
      <rotorDragCoefficient>8.06428e-05</rotorDragCoefficient>
      <rollingMomentCoefficient>1e-06</rollingMomentCoefficient>
      <rotorVelocitySlowdownSim>10</rotorVelocitySlowdownSim>
      <motorType>velocity</motorType>
    </plugin>

    <!-- Add the Joint State Publisher system -->
    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
        <joint_name>propeller_guard_joint</joint_name>
        <topic>/joint_states</topic>
    </plugin>

  </model>
</sdf>
